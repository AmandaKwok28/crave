generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Like {
  id           Int      @id @default(autoincrement())
  recipeId     Int
  userId       String
  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  date         DateTime   @default(now())

  @@unique([recipeId, userId], name: "likeId")
}

model Bookmark {
  id           Int      @id @default(autoincrement())
  recipeId     Int
  userId       String
  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([recipeId, userId], name: "bookmarkId")
}

model RecentlyViewed {
  id        Int      @id @default(autoincrement())
  userId    String
  recipeId  Int
  viewedAt  DateTime @default(now()) @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, recipeId])
  @@index([userId, viewedAt(sort: Desc)])
}

model User {
  id           String       @id @default(uuid())
  email        String    @unique
  name         String
  passwordHash String
  bookmarks    Bookmark[]
  likes        Like[]
  comments     Comment[]  
  school       String
  major        String
  recipes      Recipe[]
  session      Session[]
  avatarImage  String?    // should be optional
  recentlyViewed RecentlyViewed[]
  recommendedRecipes RecommendedRecipe[]
  hostedParties  CookingParty[]  @relation("PartyHost")
  partyMemberships PartyMember[]
  rating       Float        @default(0)
  followedBy   Follow[]     @relation("UserFollowedBy")
  following    Follow[]     @relation("UserFollowing")
}

model Follow {
  followerId   String
  followingId  String
  follower     User         @relation("UserFollowing", fields: [followerId], references: [id])
  following    User         @relation("UserFollowedBy", fields: [followingId], references: [id])
  createdAt  DateTime  @default(now())

  @@id([followerId, followingId])
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RecipeFeatureVector {
  id           Int      @id @default(autoincrement())
  recipeId     Int      @unique
  recipe       Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  vector       Float[]  // Store the calculated feature vector 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Price {
  CHEAP
  MODERATE
  PRICEY
  EXPENSIVE
}

enum Cuisine {
  ITALIAN
  MEXICAN
  CHINESE
  INDIAN
  JAPANESE
  FRENCH
  MEDITERRANEAN
  AMERICAN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model Recipe {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  title        String
  image        String?
  description  String?
  ingredients  String[]
  instructions String[]
  likes        Like[] 
  bookmarks    Bookmark[]
  published    Boolean  @default(false)
  viewCount    Int      @default(0)
  authorId     String
  author       User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  mealTypes    String[] @default([])
  price        Price?
  cuisine      Cuisine?
  allergens    String[] @default([])
  difficulty   Difficulty?
  sources      String[] @default([])
  prepTime     Int?
  
  similarRecipes RecipeSimilarity[] @relation("SimilarToRecipe")
  similarToOtherRecipes RecipeSimilarity[] @relation("SimilarRecipe")
 
  // New relation to feature vector
  featureVector RecipeFeatureVector?

  // comments
  comments   Comment[] @relation("RecipeComments")
  viewedBy RecentlyViewed[]

  recommendedRecipes RecommendedRecipe[]

  partyRecommendations PartyRecommendation[]
}

model Allergen {
  id        Int    @id @default(autoincrement()) 
  name      String @unique
  createdAt DateTime @default(now()) 
}

model RecipeSimilarity {
  id              Int      @id @default(autoincrement())
  baseRecipeId    Int      // The recipe we're finding similarities for
  similarRecipeId Int      // A recipe that's similar to the base recipe
  similarityScore Float    // How similar they are (higher = more similar)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  baseRecipe    Recipe @relation("SimilarToRecipe", fields: [baseRecipeId], references: [id], onDelete: Cascade)
  similarRecipe Recipe @relation("SimilarRecipe", fields: [similarRecipeId], references: [id], onDelete: Cascade)

  @@unique([baseRecipeId, similarRecipeId])
  @@index([baseRecipeId, similarityScore(sort: Desc)])
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String
  recipeId  Int
  recipe    Recipe   @relation("RecipeComments", fields: [recipeId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}

model RecommendedRecipe {
  id               Int      @id @default(autoincrement())
  userId           String  
  recipeId         Int
  similarityScore  Float
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade) // Relation to User
  recipe           Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade) // Relation to Recipe
}

enum PartyStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}

model CookingParty {
  id             String          @id @default(uuid())
  name           String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  status         PartyStatus     @default(PENDING)
  shareLink      String          @unique
  expiresAt      DateTime?       
  hostId         String
  host           User            @relation("PartyHost", fields: [hostId], references: [id], onDelete: Cascade)
  members        PartyMember[]
  preferences    PartyPreference?
  recommendations PartyRecommendation[]
}

model PartyMember {
  id             Int             @id @default(autoincrement())
  partyId        String
  userId         String
  joinedAt       DateTime        @default(now())
  hasAccepted    Boolean         @default(false)
  party          CookingParty    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  ingredients    String[]        @default([])
  cookingAbility Difficulty?

  @@unique([partyId, userId])
}

model PartyPreference {
  id             Int             @id @default(autoincrement())
  partyId        String          @unique
  party          CookingParty    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  availableTime  Int?            // Time in minutes
  preferredCuisines Cuisine[]    @default([])
  preferredPrice Price?
  aggregatedIngredients String[] @default([])
  excludedAllergens String[]     @default([])
  preferredDifficulty Difficulty?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model PartyRecommendation {
  id             Int             @id @default(autoincrement())
  partyId        String          
  recipeId       Int
  similarityScore     Float
  createdAt      DateTime        @default(now())
  party          CookingParty    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  recipe         Recipe          @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([partyId, recipeId])
}